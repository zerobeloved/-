/* pages/index/index.wxss */

.banners{
    width:100%;
    height: 100vh;
}

.benners image{
    width: 100%;
    height: 100%;
    /* border-radius: 40rpx; */
    /* padding-left: 30rpx; */
}

.navCntainer{
    display: flex;
}

.navItem{
    display: flex;
    flex-direction: column;
    width:20%;
    margin: 0 10rpx;
    align-items: center;
    
}
.iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background-color: rgb(240,19,19);
    color: white;
    margin: 20rpx 0;
    font-size: 50rpx;
}

.navItem{
    font-size: 26rpx;
}

.reconmendContent{
    padding:20rpx;
    font-size: 36rpx;
}

.reconmendContent .header .title{
    font-size: 32rpx;
    color: #666;
    line-height: 80rpx;
    height: 80rpx;
}

.reconmendContent .header .more{
    float: right;
    font-size: 26rpx;
    line-height: 36rpx;
    padding:5rpx;
    border: 1px solid black;
    border-radius:30rpx;
    padding: 10rpx 20rpx;
}
.scrollItem{
    width: 200rpx;
    margin-right:20rpx;
}
.scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;

}
.reconmendScroll{
    display:flex;
    padding-top: 10rpx;
}

.scrollItem text{
    font-size: 26rpx; 
    /* 单行文本隐藏 */
    /* display: block;
    white-space: nowrap;
    overflow:hidden;
    text-overflow: ellipsis;  */

    /* 多行文本隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}